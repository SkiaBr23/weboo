<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="250dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/capaLivroTransaction"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="match_parent"
                android:background="@drawable/capa_livro_teste"
                android:layout_height="160dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.makeramen.roundedimageview.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/fotoPerfilUsuarioSolicitado"
                    android:src="@color/cinzaManeiro"
                    android:scaleType="fitCenter"
                    app:riv_corner_radius="30dip"
                    app:riv_border_width="1dip"
                    app:riv_border_color="#333333"
                    app:riv_mutate_background="true"
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_keyboard_arrow_right"

                    />

                <com.makeramen.roundedimageview.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/fotoPerfilUsuarioSolicitante"
                    android:src="@color/cinzaManeiro"
                    android:scaleType="fitCenter"
                    app:riv_corner_radius="30dip"
                    app:riv_border_width="1dip"
                    app:riv_border_color="#333333"
                    app:riv_mutate_background="true"
                    android:layout_height="50dp"
                    android:layout_width="50dp"

                    android:layout_marginTop="20dp"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="fill_parent"

                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tituloLivroTransaction"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:layout_marginTop="5dp"
                        android:text="Harry Potter e as Relíquias da Morte  hahahahaha s s s s "
                        android:textColor="@color/preto"
                        android:textSize="18sp" />


                    <Button
                        android:id="@+id/btnStatusFail"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_margin="6dp"
                        android:background="@android:drawable/ic_menu_close_clear_cancel"
                        android:backgroundTint="@color/vermelho" />


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center"
>

                <TextView
                    android:id="@+id/edicaoLivroTransaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="4ª edição"
                    android:textColor="@color/preto"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/conservacaoLivroTransaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Condição: Usado"
                    android:layout_weight="1"
                    android:textColor="@color/preto"
                    android:textSize="14sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/nomeUsuarioSolicitado"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:text="Lais Nery"
                    android:textColor="@color/preto"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtNumeroUsuarioSolicitado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:autoLink="phone"
                    android:text="(61) 98172-1950"
                    android:textColor="@color/preto"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/zap_icon" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <Button
                    android:id="@+id/btnConfirmar"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttons"
                    android:gravity="center"
                    android:text="Finalizar troca"
                    android:textAllCaps="false"
                    android:textColor="@color/branco"
                    android:textSize="15sp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#000000"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

    </LinearLayout>

</LinearLayout>