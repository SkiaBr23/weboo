<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layoutDadosUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="5dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.makeramen.roundedimageview.RoundedImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/fotoPerfilUsuario"
                        android:src="@color/cinzaManeiro"
                        android:scaleType="fitCenter"
                        app:riv_corner_radius="30dip"
                        app:riv_border_width="1dip"
                        app:riv_border_color="#333333"
                        app:riv_mutate_background="true"
                        android:layout_height="50dp"
                        android:layout_width="50dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        />

                    <TextView
                        android:layout_width="130dp"
                        android:layout_marginStart="5dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtNomeUsuario"
                        android:layout_marginTop="15dp"
                        android:text="Fulano da Silva dos Santos"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginStart="10dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Edição: "/>

                        <TextView
                            android:id="@+id/valorEdicao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4ª"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="10dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Conservação: "/>

                        <TextView
                            android:id="@+id/valorConservacao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ótimo"/>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
            android:id="@+id/btnSolicitar"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:text="solicitar"
            android:inputType="text"
            android:elevation="5dp"
            android:textColor="@color/branco"
            android:background="@drawable/btn_perfil"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#000000"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>
            
        </LinearLayout>

</LinearLayout>